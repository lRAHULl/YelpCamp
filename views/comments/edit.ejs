<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center;">Edit Comment</h1>
  <div style="margin: 20px auto;width: 30%;">
    <form action="/camps/<%= camp_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" name="comment[text]" value="<%= comment.text %>" placeholder="text" class="form-control"
          required>
      </div>
      <div class="form-group">
        <input class="btn btn-lg btn-primary btn-block" type="submit">
      </div>
    </form>
    <a href="/camps/<%= camp_id %>">Back</a>
  </div>
</div>

<% include ../partials/footer %>