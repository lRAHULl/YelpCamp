<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>
        <a class="btn btn-success" href="/camps/new">Add a new Camp</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display: flex; flex-wrap: wrap;">
    <% camps.forEach(camp => { %>
        <div class="col-md-3 col-sm-6">
          <div class="thumbnail">
            <img src="<%= camp.image %>" alt=<%= camp.name %>>
            <div class="caption">
              <h4><%= camp.name %></h4>
            </div>
            <p>
                <a href="/camps/<%= camp._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
    <% }); %>
  </div>


  <a href="/">Home</a>

</div>

<% include ../partials/footer %>